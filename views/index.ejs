<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="stylesheets/style.css">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>

    <div class="main w-full min-h-screen bg-zinc-900">
        <div class="form p-10 text-white">

             <!-- /create is route and using post crud operation -->
            <form action="/create" method="post">
                <input name="title" class="block px-5 w-full rounded-md outline-1 py-2 bg-zinc-800" type="text" placeholder="Title">
                <textarea name="details" class="block px-5 w-full rounded-md outline-1 mt-2 py-2 bg-zinc-800 resize-none" placeholder="Write Your Task"></textarea>
                <input class="mt-2 bg-blue-600 px-5 py-2 rounded-md" type="Submit" value="Create Task">
            </form>

            
        </div>


        <div class="task flex gap-3 flex-wrap p-10">

            <% if (files.length === 0) { %>
                <h1 class="text-white text-2xl">No Task Yet.</h1>
            <% } else { %>
                <% files.forEach(function(val) { %>
                    <div class="task w-72 px-3 py-4 rounded-md bg-zinc-800">
                        <h1 class="text-white text-3xl tracking-tighter"> <%= val.split(".txt")[0] %> </h1>
                        <a  class="text-blue-500 inline-block mt-3" href="/file/<%= val %>">Read More.</a>
                    </div>
                <% }) %>
            <% } %>

        </div>



    </div>

    <script src="javascripts/script.js"></script>
</body>
</html>
